<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Animate when the card flips in from the right -->

    <!-- Before rotating, immediately set alpha to 0 -->

    <objectAnimator

        android:valueFrom="1.0"

        android:valueTo="0.0"

        android:propertyName="alpha"

        android:duration="0"

        />

    <!-- Rotate along the Y axis from the right to animate the flip in -->

    <objectAnimator

        android:valueFrom="180"

        android:valueTo="0"

        android:propertyName="rotationY"

        android:interpolator="@android:interpolator/accelerate_decelerate"

        android:duration="@integer/animation_time_card_flip_time_full"

        />

    <!-- Half-way through the rotation (see startOffset), set the alpha to 1 -->
    <!-- startOffset - Delay in milliseconds before the animation runs -->

    <objectAnimator

        android:valueFrom="0.0"

        android:valueTo="1.0"

        android:propertyName="alpha"

        android:startOffset="@integer/animation_time_card_flip_time_half"

        android:duration="1"

        />

</set>